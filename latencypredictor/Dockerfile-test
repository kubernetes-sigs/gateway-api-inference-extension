# Dockerfile-test
FROM python:3.9-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Python dependencies for testing (minimal set)
RUN pip install --no-cache-dir \
    pytest \
    pytest-asyncio \
    requests \
    httpx \
    aiohttp \
    numpy \
    pandas \
    scikit-learn \
    xgboost \
    lightgbm

# Copy test files
COPY test_dual_server_client.py .
COPY setup_training_data.py .

# Create test results directory
RUN mkdir -p /test-results

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Use entrypoint to handle warmup logic
ENTRYPOINT ["/app/test_entrypoint.sh"]

# Default command runs the specific test
CMD ["pytest", "-v", "-s", "test_dual_server_client.py"]
